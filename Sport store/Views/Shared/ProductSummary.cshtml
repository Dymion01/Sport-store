@model Product

<div class="card m-1 p-1">
    <div class="bg-danger p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary alert-secondary " style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>


    <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" name="returnIrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text p-1">
            @Model.Description
            <button type="submit" class="btn btn-warning btn-sm " style="float:right">
                Dodaj do koszyka
            </button>
        </span>

    </form>
</div>